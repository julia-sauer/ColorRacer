<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" stylesheets="@styleSheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.unibas.dmi.dbis.cs108.gui.GameLobbyController">
   <right>
      <VBox alignment="CENTER" spacing="5.0" styleClass="game-panel" BorderPane.alignment="TOP_CENTER">
         <children>
            <TitledPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="219.0" prefWidth="266.0" text="Chat">
               <content>
                  <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="219.0" prefWidth="244.0" styleClass="anchor-pane">
                     <children>
                        <TextArea fx:id="chatArea" layoutX="5.0" layoutY="-2.0" prefHeight="163.0" prefWidth="234.0" />
                        <TextField fx:id="txtUsermsg" layoutX="7.0" layoutY="163.0" onKeyPressed="#handleEnterPressed" prefHeight="16.0" prefWidth="174.0" promptText="Type your message here..." />
                        <Button alignment="CENTER" layoutX="180.0" layoutY="159.0" mnemonicParsing="false" onAction="#handleBroadcast" prefHeight="42.0" prefWidth="69.0" styleClass="game-button" text="All" textAlignment="CENTER" />
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
            <TabPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="164.0" prefWidth="267.0" styleClass="tab-pane" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="List">
                     <content>
                        <ListView fx:id="listlist" prefHeight="200.0" />
                     </content>
                  </Tab>
                <Tab text="Game List">
                     <content>
                        <ListView fx:id="gamelist" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </Tab>
                  <Tab text="Lobby List">
                     <content>
                        <ListView fx:id="lobbylist" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
            <Button fx:id="readyButton" mnemonicParsing="false" onAction="#handleReady" styleClass="game-button" text="Ready" VBox.vgrow="ALWAYS" />
            <Button fx:id="startButton" disable="true" mnemonicParsing="false" onAction="#handleStart" styleClass="game-button" text="Start Game" visible="false" VBox.vgrow="ALWAYS" />
            <Button fx:id="finishButton" disable="true" mnemonicParsing="false" onAction="#handleFinish" styleClass="game-button" text="Finish Game" visible="false" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </right>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Leave">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleLeave" text="Leave Server" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Nickname">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNicknameChange" text="Change nickname" />
            </items>
          </Menu>
          <Menu fx:id="bikeOption" mnemonicParsing="false" text="Bike">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleBikeSelection" text="Change Bike" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox alignment="CENTER" fillHeight="false" spacing="20.0" styleClass="game-panel" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <ImageView fx:id="dice1" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="dice2" fitHeight="50.0" fitWidth="50.0" layoutX="756.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="dice3" fitHeight="50.0" fitWidth="50.0" layoutX="861.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="dice4" fitHeight="50.0" fitWidth="50.0" layoutX="966.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="dice5" fitHeight="50.0" fitWidth="50.0" layoutX="756.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="dice6" fitHeight="50.0" fitWidth="50.0" layoutX="546.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <Button fx:id="throwDiceButton" mnemonicParsing="false" onAction="#handleThrowDice" styleClass="game-button" text="Roll" visible="false" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="300.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="moveButton" mnemonicParsing="false" onAction="#handleMoveToField" styleClass="game-button" text="Move" visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="skipButton" mnemonicParsing="false" onAction="#handleSkip" styleClass="game-button" text="Skip" visible="false" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label styleClass="header-label" text="Label" />
            <AnchorPane>
               <children>
                  <ImageView fitHeight="600.0" fitWidth="700.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@gameboard_sizeposition.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </center>
</BorderPane>
