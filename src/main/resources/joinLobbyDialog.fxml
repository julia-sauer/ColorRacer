    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="dialog-header" text="Select a Lobby to Join"/>
        <ListView fx:id="availableLobbies" prefHeight="200.0" prefWidth="200.0"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleJoin" styleClass="game-button" text="Join"/>
                <Button mnemonicParsing="false" onAction="#handleCancel" styleClass="game-button" text="Cancel"/>
            </children>
        </HBox>
    </children>
</VBox>
