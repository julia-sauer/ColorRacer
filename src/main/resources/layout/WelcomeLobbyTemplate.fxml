                <ListView fx:id="gameList" prefHeight="200.0" prefWidth="200.0" styleClass="list-view" VBox.vgrow="ALWAYS" />
                <Label styleClass="header-label" text="Lobby list" />
                <ListView fx:id="lobbylist" prefHeight="200.0" prefWidth="200.0" styleClass="list-view" VBox.vgrow="ALWAYS" />
