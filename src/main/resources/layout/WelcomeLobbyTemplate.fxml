                <Insets right="10.0" />
            </padding>
        </VBox>
    </right>
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Leave">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleLeave" text="Leave Server" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Nickname">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleNicknameChange" text="Change nickname" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Highscore">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleHighscoreList" text="Show highscore list" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Settings">
              <items>
                  <CheckMenuItem fx:id="fullscreenMode" mnemonicParsing="false" onAction="#onToggleFullscreen" text="Full-screen mode" />
              </items>
            </Menu>
            </menus>
        </MenuBar>
    </top>
    <effect>
        <Blend mode="MULTIPLY" />
    </effect>
</BorderPane>
