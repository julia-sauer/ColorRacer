<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" styleClass="dialog-panel" stylesheets="@styles/dialogStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.unibas.dmi.dbis.cs108.gui.HighscoreListDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label styleClass="dialog-header" text="Highscore List" />
        <ListView fx:id="highscoreListView" prefHeight="200.0" prefWidth="200.0" />
        <Button mnemonicParsing="false" onAction="#handleClose" styleClass="game-button" text="Close" />
    </children>
</VBox>
